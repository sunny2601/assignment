<p id="notice"><%= notice %></p>

<h1>Listing Cleaners</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Quality score</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @cleaners.each do |cleaner| %>
      <tr>
        <td><%= cleaner.email %></td>
        <td><%= cleaner.first_name %></td>
        <td><%= cleaner.last_name %></td>
        <td><%= cleaner.quality_score %></td>
        <td><%= link_to 'Show', cleaner %></td>
        <td><%= link_to 'Edit', edit_cleaner_path(cleaner) %></td>
        <td><%= link_to 'Destroy', cleaner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cleaner', new_cleaner_path, class: "btn btn-primary" %><br>
