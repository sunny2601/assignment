<%= form_for(@cleaner) do |f| %>
  <% if @cleaner.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cleaner.errors.count, "error") %> prohibited this cleaner from being saved:</h2>

      <ul>
      <% @cleaner.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :quality_score %><br>
    <%= f.text_field :quality_score, class: "form-control" %>
  </div>
  <div>
    <% City.all.each do |city| %>
    <label>
        <%= check_box_tag "cleaner[city_ids][]", city.id, f.object.cities.include?(city), class: "form-check-input" %>
        <%= city.name %><br>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit :value => "Submit", :class => 'btn btn-primary' %>
  </div>
<% end %>
